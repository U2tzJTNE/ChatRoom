<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="70dp"
    android:paddingTop="@dimen/activity_vertical_margin">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_icon_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/splash" />

    <TextView
        android:id="@+id/chat_name_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/chat_icon_left"
        android:text="蒋凯"
        android:textColor="@color/black_overlay" />

    <me.himanshusoni.chatmessageview.ChatMessageView
        android:id="@+id/chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chat_name_left"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/chat_icon_left"
        app:cmv_arrowGravity="start"
        app:cmv_arrowPosition="left"
        app:cmv_backgroundColor="@color/white"
        app:cmv_backgroundColorPressed="#FFBABABA"
        app:cmv_cornerRadius="3dp">

        <com.vanniktech.emoji.EmojiTextView
            android:id="@+id/chat_text_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试信息测nisdf"
            android:textIsSelectable="true"
            android:textSize="16sp"
            app:emojiSize="18sp" />
    </me.himanshusoni.chatmessageview.ChatMessageView>

</RelativeLayout>